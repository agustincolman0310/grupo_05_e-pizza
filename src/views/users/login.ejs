<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>
  <link href="/css/forms.css" rel="stylesheet" />

  <body class="body-form">
    <%- include('../partials/header.ejs') %>

    <main>
      <form action="/users/login" method="POST" class="login-form">
        <section class="form-login">
          <h4 class="h4-form">Ingresá</h4>
          <input class="control" type="email" name="email" placeholder="E-mail"/>
          <% if(locals.errors && errors.email) { %>
            <p class="error-msg"><%= errors.email.msg %></p>
        <% } %>
          <input class="control" type="password" name="password" placeholder="contraseña"/>
          <input class="button" type="submit" name="" value="Ingresar" />
          <input class="button" type="reset" name="" value="Cancelar" />
          <p><a href="#">¿Olvidaste tu contraseña?</a></p>
        </section>
      </form>
    </main>

    <%- include('../partials/footer.ejs') %>
    <!--holaa-->
  </body>
</html>
